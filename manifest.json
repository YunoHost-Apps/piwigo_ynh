{
    "name": "Piwigo",
    "id": "piwigo",
    "packaging_format": 1,
    "description": {
        "en": "Open source photo gallery for the web",
        "fr": "Galerie de photos open source pour le web"
    },
    "version": "12.1.0~ynh1",
    "url": "http://piwigo.org",
    "upstream": {
        "license": "GPL-2.0",
        "website": "http://piwigo.org",
        "demo": "https://piwigo.org/demo",
        "admindoc": "https://piwigo.org/guides",
        "code": "https://github.com/Piwigo/Piwigo"
    },
    "license": "GPL-2.0",
    "maintainer": {
        "name": "JimboJoe",
        "email": "jimmy@monin.net",
        "url": ""
    },
    "requirements": {
        "yunohost": ">= 4.2.3"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.3-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/piwigo",
                "default": "/piwigo"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["de", "en", "es", "fr", "it", "pt"],
                "default": "en"
             }
        ]
    }
}
